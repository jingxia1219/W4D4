<!DOCTYPE html>
<html>
  <head>

    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if current_user %>
      <h5>Hi, <%=current_user.email  %>! Welcome :)</h5>
      <h3> <%= button_to "logout", session_url, method: :delete %> </h3>
    <% end  %>
    <br>
  <h1><font face="" color="purple">Jing's awesome Music App</font></h1> 
    <%= yield %>
  </body>
</html>
